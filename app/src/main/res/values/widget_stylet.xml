<resources>
    <style name="LoadingLayoutStyle" parent="LoadingLayout.Style">
        <item name="llLoadingResId">@layout/layout_loading</item>
    </style>

    <style name="BackgroundStyle" parent="ThemeOverlay.MaterialComponents">
        <item name="android:background">@color/color_background</item>
    </style>

    <style name="ForegroundStyle" parent="ThemeOverlay.MaterialComponents">
        <item name="android:background">@color/color_foreground</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/color_foreground</item>
        <item name="itemIconTint">@color/colors_navigation</item>
        <item name="itemTextColor">@color/colors_navigation</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_foreground</item>
        <item name="title">@string/app_name</item>
        <item name="titleTextColor">@color/color_text_primary</item>
        <item name="colorControlNormal">@color/color_text_primary</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/color_foreground</item>
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@color/color_accent</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/color_primary</item>
    </style>
</resources>