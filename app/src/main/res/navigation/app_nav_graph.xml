<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@+id/home">

    <action
        android:id="@+id/action_to_detail"
        app:destination="@id/detail" />

    <fragment
        android:id="@+id/home"
        android:name="com.xueqiya.example.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/dashboard"
        android:name="com.xueqiya.example.ui.dashboard.DashboardFragment"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/notifications"
        android:name="com.xueqiya.example.ui.notifications.NotificationsFragment"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/detail"
        android:name="com.xueqiya.example.ui.detail.DetailFragment"
        tools:layout="@layout/fragment_detail" />
</navigation>